<UserControl x:Class="Sample.Wpf.SubSessionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Background="Teal" >
        <Button Command="{Binding DoSubAction}" Content="Do some sub action" />
        <Button Command="{Binding DoOtherSubAction}" Content="Do the other sub action" />
        <CheckBox IsChecked="{Binding MyFlag}" />
    </StackPanel>
</UserControl>
