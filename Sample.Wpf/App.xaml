<Application x:Class="Sample.Wpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Sample.Wpf"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <local:DefaultTemplateSelector x:Key="TemplateSelector" />
        <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        <local:BooleanToVisibilityConverterEx  x:Key="invertedBooleanToVisibilityConverter" IsReversed="True" />
    </Application.Resources>
</Application>
